<Application x:Class="Microsoft.SqlServer.DatabaseInstaller.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="SplashScreen.xaml">
    <Application.Resources>

       <ImageBrush x:Key="SplashImageBrush" ImageSource="Images/ss2008.jpg">
       </ImageBrush>
        <ImageBrush x:Key="CornerSplashImageBrush" ImageSource="Images/ss2008r2Corner.jpg" Stretch="Fill">
        </ImageBrush>
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Microsoft Sans Serif" /> 
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Application.Resources>
</Application>
