<Window x:Class="Microsoft.SqlServer.DatabaseInstaller.FatalErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Fatal Error" Height="595" Width="731"
	Background="{DynamicResource SplashImageBrush}" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="50,132,0,52">
            <Label Content="A fatal error occurred during installation. Details:" Margin="0,0,0,10"/>
            <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" Width="576" Height="320">
            	<TextBlock x:Name="ErrorTextBlock" TextWrapping="Wrap"/>
            </ScrollViewer>
        </StackPanel>
    	<Button x:Name="OKButton" HorizontalAlignment="Right" Margin="0,0,38.377,17.04" 
    		VerticalAlignment="Bottom" Content="OK" d:LayoutOverrides="Height" Width="53.55" Click="OKButton_Click" />
    </Grid>
</Window>
